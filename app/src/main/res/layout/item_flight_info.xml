<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="info"
            type="ado.sabgil.incheonariport.model.SimpleFlightInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv_airline_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_photo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_airline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:text="@{info.airline}"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_flight_id"
            app:layout_constraintStart_toEndOf="@id/iv_airline_icon"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="실험" />

        <TextView
            android:id="@+id/tv_flight_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:text="@{info.flightID}"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_airline_icon"
            app:layout_constraintTop_toBottomOf="@+id/tv_airline"
            tool:text="실험" />

        <!-- TODO 변경된 시간인것 표현하는 로직 구현하자 -->
        <TextView
            android:id="@+id/tv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:text="@{info.time}"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_airline_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_airline_icon"
            tool:text="실험" />

        <TextView
            android:id="@+id/tv_delayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="시간 변경"
            android:textSize="12sp"
            android:visibility="@{info.delayed ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/iv_airline_icon"
            app:layout_constraintEnd_toStartOf="@id/tv_schedule"
            app:layout_constraintTop_toTopOf="@id/iv_airline_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>