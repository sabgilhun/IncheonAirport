<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="terminal"
            type="ado.sabgil.incheonariport.model.Terminal1Congestion" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_update_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="12sp"
            android:text="@{terminal.updateDate}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="테스트" />

        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:text='@{terminal != null ? @string/update_time(terminal.updateTime) : ""}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_update_date"
            tool:text="테스트" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_gate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toStartOf="@+id/cd_gate3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_update_time">

            <include
                layout="@layout/layout_card_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:info="@{terminal.gate2}" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_gate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toStartOf="@+id/cd_gate4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cd_gate2"
            app:layout_constraintTop_toBottomOf="@+id/tv_update_time">

            <include
                layout="@layout/layout_card_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:info="@{terminal.gate3}" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_gate4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toStartOf="@+id/cd_gate5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cd_gate3"
            app:layout_constraintTop_toBottomOf="@+id/tv_update_time">

            <include
                layout="@layout/layout_card_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:info="@{terminal.gate4}" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_gate5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cd_gate4"
            app:layout_constraintTop_toBottomOf="@+id/tv_update_time">

            <include
                layout="@layout/layout_card_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:info="@{terminal.gate5}" />

        </androidx.cardview.widget.CardView>

        <!--TODO 업데이트 모양 버튼으로 변경하자.-->
        <Button
            android:id="@+id/btn_congestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="혼잡도 값 갱신"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cd_gate2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>